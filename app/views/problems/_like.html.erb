<div class="likes">
  <% if user_signed_in? && current_user.liked_by?(problem.id) %>
    <p><%= link_to destroy_like_path(problem),class: "like-link", method: :DELETE, remote: true do %><i class="fa fa-heart unlike-btn">いいね</i><% end %><%= problem.likes.count %></p>
  <% else %>
    <p><%= link_to create_like_path(problem), class: "like-link", method: :POST, remote: true do %><i class="fa fa-heart like-btn">いいね</i><% end %><%= problem.likes.count %></p>
  <% end %>
</div>