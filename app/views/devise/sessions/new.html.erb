<div class="registration-form">

  <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
    <header class="problem-header">
      <%= link_to image_tag('IMG_3923.jpg', size: '200x75'), root_path %>
    </header>
  <div class="form-wrap">
    <div class="form-header">
      <h1 class="form-header-text">
        会員情報
      </h1>
    </div>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
    </div>
    <div class='login-btn'>
      <%= f.submit "ログイン" ,class:"login-blue-btn" %>
    </div>
    <%= link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post%>
    <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post%>
  </div>
  <% end %>
</div>



